<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keyboard3.accessibilityservicedemo.MainActivity">

    <Button
        android:id="@+id/btn_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity栈顶"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_top">

        <Button
            android:id="@+id/btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="布局边界显示" />

        <Button
            android:id="@+id/btn_overdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="过度绘制显示" />

        <Button
            android:id="@+id/btn_gpu_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPU呈现模式" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>